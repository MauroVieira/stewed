{
    "private": true,
    "workspaces": [
        "packages/*",
        "docs"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --no-cache --parallel --continue",
        "lint": "turbo run lint",
        "lint:css": "stylelint \"**/*.scss\" --fix",
        "test": "turbo run test",
        "clean": "turbo run clean && rm -rf node_modules",
        "format": "prettier --write \"**/*.{ts,tsx,mdx,scss}\"",
        "prepublish": "lerna run prepublish",
        "publish-canary": "lerna version prerelease --preid canary --force-publish"
    },
    "devDependencies": {
        "eslint": "7.32.0",
        "stylelint": "^13.13.1",
        "lerna": "^3.22.1",
        "prettier": "^2.5.1",
        "turbo": "latest"
    },
    "name": "stewed"
}
