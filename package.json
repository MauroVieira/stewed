{
  "private": false,
  "description": "Stewed UI components in React.",
  "scripts": {
    "prepare": "husky install",
    "start": "lerna run start --parallel --stream",
    "build": "lerna run build",
    "postbuild": "lerna run postbuild",
    "test": "lerna run test --parallel",
    "lint": "lerna run lint --parallel",
    "format": "lerna run format",
    "clean": "lerna exec -- rm -rf node_modules && rm -rf node_modules",
    "publish": "lerna publish from-package --yes"
  },
  "workspaces": [
    "packages/*"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@harmonix-hub/tsconfig": "^1.0.3",
    "@babel/core": "^7.23.3",
    "@changesets/cli": "^2.26.2",
    "@harmonix-hub/eslint": "^1.0.1",
    "@harmonix-hub/prettier": "^1.0.1",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^18.0.0",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "lerna": "^7.1.5",
    "prettier": "^3.0.3",
    "semantic-release": "^22.0.5",
    "semantic-release-config-conventional": "^1.0.1",
    "react": "^18.2.0"
  }
}
