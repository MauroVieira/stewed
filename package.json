{
  "name": "stewed",
  "description": "Stewed UI components in React.",
  "private": false,
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "watch": "turbo run watch",
    "lint": "turbo run lint --parallel",
    "lint:style": "turbo run lint:style --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\"",
    "test": "turbo run test",
    "clean": "turbo clean && rm -rf node_modules",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "changelog": "changeset-conventional",
    "status:packages": "changeset status --verbose",
    "publish:packages": "changeset publish",
    "version:packages": "changeset version"
  },
  "dependencies": {
    "@stewed/react": "workspace:*",
    "@stewed/hooks": "workspace:*",
    "@stewed/utilities": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "changeset-conventional-commits": "^0.2.5",
    "@harmonix-hub/eslint": "^1.3.5",
    "@harmonix-hub/prettier": "^1.3.1",
    "@harmonix-hub/stylelint": "^1.3.2",
    "@harmonix-hub/tsconfig": "^1.3.1",
    "@harmonix-hub/testing": "^1.3.4",
    "@storybook/addon-essentials": "^8.2.1",
    "@storybook/addon-interactions": "^8.2.1",
    "@storybook/addon-docs": "^8.2.1",
    "@storybook/addon-links": "^8.2.1",
    "@storybook/addon-onboarding": "^8.2.1",
    "@storybook/builder-vite": "^8.2.1",
    "@storybook/blocks": "^8.2.1",
    "@storybook/react": "^8.2.1",
    "@storybook/react-vite": "^8.2.1",
    "@storybook/testing-library": "^0.2.2",
    "@types/react": "^18.3.3",
    "@types/node": "^20.14.10",
    "babel-preset-env": "^1.7.0",
    "husky": "^9.0.11",
    "prettier": "^3.3.2",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "storybook": "^8.2.1",
    "turbo": "^2.0.6",
    "@types/jest": "^29.5.12",
    "typescript": "^5.4.5",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/react": "^16.0.0"
  },
  "optionalDependencies": {
    "@nx/nx-linux-x64-gnu": "^19.4.2"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
