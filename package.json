{
  "name": "stewed",
  "description": "Stewed UI components in React.",
  "private": false,
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "lint": "turbo run lint --parallel",
    "lint:style": "turbo run lint:style --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\"",
    "test": "turbo run test",
    "clean": "turbo clean && rm -rf node_modules",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "publish:packages": "changeset publish",
    "version:packages": "changeset version"
  },
  "dependencies": {
    "@stewed/react": "workspace:*",
    "@stewed/hooks": "workspace:*",
    "@stewed/utilities": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/plugin-transform-runtime": "^7.24.3",
    "@babel/preset-react": "^7.24.1",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@harmonix-hub/eslint": "^1.3.1",
    "@harmonix-hub/prettier": "^1.3.1",
    "@harmonix-hub/stylelint": "^1.3.2",
    "@harmonix-hub/tsconfig": "^1.3.1",
    "@harmonix-hub/testing": "^1.3.4",
    "@storybook/addon-essentials": "^8.0.8",
    "@storybook/addon-interactions": "^8.0.8",
    "@storybook/addon-docs": "^8.0.8",
    "@storybook/addon-links": "^8.0.8",
    "@storybook/addon-onboarding": "^8.0.8",
    "@storybook/builder-vite": "^8.0.8",
    "@storybook/blocks": "^8.0.8",
    "@storybook/react": "^8.0.8",
    "@storybook/react-vite": "^8.0.8",
    "@storybook/testing-library": "^0.2.2",
    "@types/react": "^18.2.79",
    "@types/node": "^20.12.7",
    "babel-preset-env": "^1.7.0",
    "eslint": "^9.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.1.0",
    "storybook": "^8.0.8",
    "turbo": "^1.13.2",
    "@types/jest": "^29.5.12",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/react": "^15.0.2"
  },
  "optionalDependencies": {
    "@nx/nx-linux-x64-gnu": "^18.3.1"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
