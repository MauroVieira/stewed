{
  "name": "stewed",
  "description": "Stewed UI components in React.",
  "private": false,
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "watch": "turbo run watch",
    "lint": "turbo run lint --parallel",
    "lint:style": "stylelint '**/*.scss'",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\"",
    "test": "turbo run test",
    "clean": "turbo clean && rm -rf node_modules",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "changelog:conventional": "changeset-conventional",
    "changelog:package": "changeset",
    "changelog:generate": "npm run changelog:conventional & npm run packages:version",
    "packages:status": "changeset status --verbose",
    "packages:publish": "changeset publish",
    "packages:version": "changeset version"
  },
  "dependencies": {
    "@stewed/react": "workspace:*",
    "@stewed/hooks": "workspace:*",
    "@stewed/utilities": "workspace:*",
    "@hello-week/hooks": "^0.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "changeset-conventional-commits": "^0.2.5",
    "@harmonix-hub/eslint": "^1.3.7",
    "@harmonix-hub/stylelint": "^1.3.3",
    "@harmonix-hub/prettier": "^1.3.4",
    "@harmonix-hub/tsconfig": "^1.4.2",
    "@storybook/addon-essentials": "^8.3.2",
    "@storybook/addon-interactions": "^8.3.2",
    "@storybook/addon-docs": "^8.3.2",
    "@storybook/addon-links": "^8.3.2",
    "@storybook/addon-onboarding": "^8.3.2",
    "@storybook/builder-vite": "^8.3.2",
    "@storybook/blocks": "^8.3.2",
    "@storybook/react": "^8.3.2",
    "@storybook/react-vite": "^8.3.2",
    "@storybook/testing-library": "^0.2.2",
    "@types/react": "^18.3.8",
    "@types/node": "^22.5.5",
    "@types/jest": "^29.5.13",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "storybook": "^8.3.2",
    "turbo": "^2.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/react": "^16.0.1",
    "stylelint": "^16.9.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recess-order": "^5.1.0",
    "stylelint-config-recommended": "^14.0.1",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-no-unsupported-browser-features": "^8.0.1",
    "stylelint-prettier": "^5.0.2",
    "stylelint-scss": "^6.7.0",
    "eslint": "^8.56.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-workspaces": "^0.10.1",
    "eslint-plugin-storybook": "^0.8.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.0.0",
    "typescript": "^5.1.6"
  },
  "optionalDependencies": {
    "@nx/nx-linux-x64-gnu": "^19.8.0"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
