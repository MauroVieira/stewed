{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": ["dom", "es6", "es2017"],
        "module": "es2015",
        "jsx": "react",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "target": "es6",
        "paths": {
            "@stewed/*": ["packages/components/*"],
            "@stewed/hooks/*": ["packages/hooks/src/*"],
            "@stewed/utils/*": ["packages/utils/src/*"]
        },
        "typeRoots": ["node_modules/@types"]
    }
}
