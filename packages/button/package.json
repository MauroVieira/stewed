{
  "name": "@stewed/button",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sass": "_index.scss",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**",
    "scss/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "lint": "TIMING=1 eslint react --fix && stylelint \"**/*.scss\" --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@stewed/theme": "*",
    "@stewed/utils": "*",
    "@stewed/hooks": "*",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.11",
    "@stewed/tsconfig": "*",
    "@stewed/eslint-preset": "*",
    "@stewed/stylelint": "*",
    "tsup": "^5.10.1",
    "typescript": "^4.5.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
